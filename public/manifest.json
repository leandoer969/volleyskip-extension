{
    "manifest_version": 3,
    "name": "VolleySkip+",
    "version": "3.1",
    "description": "Add custom playback controls for volleyball videos.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://tv.volleyballworld.com/player*"],
    "content_scripts": [
      {
        "matches": ["https://tv.volleyballworld.com/player*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "128": "icons/icon.png"
    }
  }